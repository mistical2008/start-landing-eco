
{% set vertical = socialsVertical | default(true) %}
{% set items = socials.items %}

{% if vertical %}
  {% extends "layouts/sidestick-wrapper.njk" %}
{% endif %}

{% block content %}

  {% if items %}
    {# TODO: rewrite with flex for 'social-links__list' and rotate-90 for  #}
      <ul class="[ social-links__list ] [ flex items-center space-x-12 md:space-before ]">
        {% for item in items %}
          {% set relAttribute = '' %}

          {% if item.rel %}
            {% set relAttribute = ' rel="' + item.rel + '"' %}
          {% endif %}

          <li class="nav__item">
            <a href="{{ item.url }}"{{ relAttribute | safe }} >{{ item.text }}</a>
          </li>
        {% endfor %}
      </ul>
  {% endif %}

{% endblock %}
