{% set items = socials.items %}

{% if items %}
  <nav class="nav">
    <ul class="[ social-links__list ] [ flex items-center space-x-2 md:space-before ]">
      {% for item in items %}
        {% set relAttribute = '' %}

        {% if item.rel %}
          {% set relAttribute = ' rel="' + item.rel + '"' %}
        {% endif %}

        <li class="nav__item">
          <a href="{{ item.url }}"{{ relAttribute | safe }} >{{ item.text }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endif %}
