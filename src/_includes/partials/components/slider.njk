{% macro slider(images='',id='image-slider', customClasses='', tag='div', label='') %}
  {% set tag = 'div' %}
  {% set embeddedClasses = 'splide' %}
  {% set classes = customClasses + ' ' +  embeddedClasses %}

  {% if images %}
    <{{tag}} id="{{ id }}" class="{{ classes | trim }}">
      <div class="splide__track">
        <ul class="splide__list">

          {% for image in images %}
            <li class="splide__slide">
              <img src="{{image}}">
            </li>
          {% endfor %}

        </ul>
      </div>
      </{{tag}}>
  {% endif %}

{% endmacro %}
