{% macro slider(
    images='',
    id='image-slider',
    containerClasses='',
    imageWrapperClasses='',
    imageClasses='',
    tag='div', label=''
  )
%}

  {% set tag = 'div' %}

  {% if images %}
    <{{tag}} id="{{ id }}" class="[ splide ] {{ containerClasses | trim }}">

      <div class="[ splide__track ]">
        <ul class="[ splide__list ]">

          {% for image in images %}
            <li class="[ splide__slide ] {{ imageWrapperClasses }}">
              <img src="{{image}}" class="[ slider__image ] {{ imageClasses | safe }}">
            </li>
          {% endfor %}

        </ul>
      </div>

    </{{tag}}>
  {% endif %}

{% endmacro %}
