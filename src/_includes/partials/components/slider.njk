{% macro slider(images='',id='image-slider', customClasses='', customImageClasses='[ slider__image ]', tag='div', label='') %}
  {% set tag = 'div' %}
  {% set embeddedClasses = 'splide' %}
  {% set classes = customClasses + ' ' +  embeddedClasses %}

  {% if images %}
    <{{tag}} id="{{ id }}" class="{{ classes | trim }}">

      <div class="splide__track">
        <ul class="splide__list">

          {% for image in images %}
            <li class="splide__slide">
              <img src="{{image}}" class="{{ customImageClasses | safe }}">
            </li>
          {% endfor %}

        </ul>
      </div>

    </{{tag}}>
  {% endif %}

{% endmacro %}
