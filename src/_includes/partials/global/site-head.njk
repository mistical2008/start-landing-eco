{% from "partials/components/button.njk" import button %}

<a class="sr-only skip-link" href="#main-content">Skip to content</a>

<header role="banner" class="[ site-head ] [ absolute inset-x-0 top-0 text-white pt-8 pb-8 ] ">

  <div class="container mx-auto">

    <span class="sr-only">{{ site.name }}: {{ pageType }}</span>

    <div class="[ site-head__inner ] [ relative flex justify-between items-center ]">

      {% include "partials/components/main-logo.njk" %}
      {% include "partials/components/nav.njk" %}

      <div class="[ button-wrapper ]">
        {{ button(text=header.button, link=true) }}
      </div>

    </div>
  </div>
</header>
