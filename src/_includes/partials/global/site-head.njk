{% from "partials/components/button.njk" import button %}
{% from "partials/components/main-logo.njk" import logo %}


<a class="sr-only skip-link" href="#main-content">Skip to content</a>

<header role="banner" class="[ site-head ] [ absolute inset-x-0 top-0 text-white pt-8 pb-8 z-20 ] ">

  <div class="container">

    <span class="sr-only">{{ site.name }}: {{ pageType }}</span>

    <div class="[ site-head__inner ] [ relative flex justify-between items-center ]">


      {% set logoWrapperClasses="absolute left-1/2 -translate-x-2/3 sm:-translate-x-1/2 text-white inline-block transition lg:static lg:translate-x-0 " %}
      {{ logo(logoWrapperClasses) }}

      {% include "partials/components/nav.njk" %}

      <div class="[ button-wrapper ]">
        {{ button(text=header.button, link=true) }}
      </div>

    </div>
  </div>
</header>
