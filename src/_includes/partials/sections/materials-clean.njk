{% extends "layouts/section-container.njk" %}

{% from "partials/components/button.njk" import button %}
{% from "partials/components/slider-clean.njk" import slider %}
{% from "partials/components/dev-disklamer.njk" import devDisklamer %}

{% set contentWrapperClasses = "flex flex-wrap gap-2 relative " %}

{% block content %}

  {{
    slider(
      images=materials.slider.images,
      id="slider-materials",
      containerClasses='[ materials-slider ] [ lg:h-96 lg:w-96 max-w-full basis-full flex-grow-1 pb-8 lg:pb-0 lg:absolute lg:right-0 lg:-top-20 ]',
      imageClasses='[ w-full h-full object-cover object-center ]'
    )
  }}

  <div class="[ section-description ] [ section-description--cta ] [ space-y-4 flex-grow-full basis-0 lg:max-w-1/2 min-w-1/2 ] ">

    {{ devDisklamer( message = "this block just for testing. After adjusting apply this to the original block") }}

    <h2 class="[ heading-lg ] [ text-primary ]">{{materials.heading}}</h2>
    <p>{{materials.text}}</p>

    {{
      button(
        text=materials.button,
        link=true,
        variant="outline"
      )
    }}
  </div>

{% endblock %}
