# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

[*.js]
indent_size = 4
max_line_length = 90

[package.json]
indent_size = 2

[*.{html,njk,hbs,liquid}]
indent_size = 4
max_line_length = 90
